{
    "name": "lime-vscode-extension",
    "version": "1.0.0",
    "publisher": "openfl",
    "engines": {
        "vscode": "^1.14.0",
        "nadako.vshaxe": "^1.8.0"
    },
    "displayName": "Lime",
    "description": "Lime and OpenFL project support",
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "theme": "dark",
        "color": "#A84B38"
    },
    "badges": [
    ],
    "icon": "",
    "author": "Joshua Granick",
    "license": "MIT",
    "dependencies": {
        "vscode-languageclient": "^3.3.0"
    },
    "bugs": "https://github.com/openfl/lime-vscode-extension/issues",
    "homepage": "https://github.com/openfl/lime-vscode-extension/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/openfl/lime-vscode-extension.git"
    },
    "scripts": {
        "vscode:prepublish": "haxe build.hxml"
    },
    "main": "bin/lime-vscode.js",
    "activationEvents": [
        "onLanguage:haxe",
        "workspaceContains:project.xml",
        "workspaceContains:project.lime",
        "workspaceContains:project.hxp"
    ],
    "contributes": {
        "configuration": {
            "title": "Lime configuration",
            "properties": {
            }
        },
        "commands": [
            {
                "title": "Select Target",
                "command": "lime.selectTarget",
                "category": "Lime"
            },
            {
                "title": "Select Build Configuration",
                "command": "lime.selectBuildConfig",
                "category": "Lime"
            },
            {
                "title": "Edit Target Flags",
                "command": "lime.editTargetFlags",
                "category": "Lime"
            }
        ]
    },
    "extensionDependencies": [
        "nadako.vshaxe"
    ],
    "enableProposedApi": true
}
